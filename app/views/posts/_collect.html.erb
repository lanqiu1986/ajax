<% if current_user #登录才可以收藏 %>
  <% if post.find_collect(current_user) %>
    <%= link_to "取消收藏", uncollect_post_path(post), :method => :post, :remote => true, :class => "btn btn-primary" %>
  <% else %>
    <%= link_to "❤️", collect_post_path(post), :method => :post, :remote => true, :class => "btn btn-primary" %>
  <% end %>
<% end %>
